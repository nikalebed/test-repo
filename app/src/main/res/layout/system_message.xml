<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp" android:layout_height="wrap_content">
     <TextView
         android:id="@+id/message_user_s"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:textStyle="bold"
         android:textColor="#1E9B11"
         android:text="DIAlog"
         android:layout_marginLeft="10dp"
         />
    <TextView
        android:id="@+id/message_time_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/message_text_s"
        android:text="11:13"
        android:layout_marginHorizontal="10dp"
        />
    <TextView
        android:id="@+id/message_text_s"
        android:text="hello world"
        android:background="@drawable/green_background_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="#ffffff"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/message_user_s"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:elevation="10dp"
        />

</RelativeLayout>