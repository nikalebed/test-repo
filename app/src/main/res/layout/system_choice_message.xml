<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp" android:layout_height="wrap_content">
    <TextView
        android:id="@+id/message_user_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="#1E9B11"
        android:text="DIAlog"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/message_time_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/sbmBtn"
        android:text="11:13"
        android:layout_marginHorizontal="10dp"
        />
    <ListView
        android:id="@+id/message_choice"
        android:background="@drawable/white_background_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:padding="15dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/message_user_s"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:choiceMode="multipleChoice"
        android:elevation="10dp"></ListView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sbmBtn"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/red_background_rectangle"
        android:text="подтвердить"
        android:textColor="#FFFF"
        android:layout_below="@+id/message_choice"
        >
    </Button>
</RelativeLayout>